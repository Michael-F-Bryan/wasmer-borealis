{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/Michael-F-Bryan/wasmer-borealis/experiment",
  "$ref": "#/$defs/Experiment",
  "$defs": {
    "Experiment": {
      "properties": {
        "package": {
          "type": "string"
        },
        "args": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "command": {
          "type": "string"
        },
        "env": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object"
        },
        "Filters": {
          "$ref": "#/$defs/Filters"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "package",
        "args",
        "command",
        "env",
        "Filters"
      ]
    },
    "Filters": {
      "properties": {
        "blacklist": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "include-every-version": {
          "type": "boolean"
        },
        "namespaces": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "users": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "blacklist",
        "include-every-version",
        "namespaces",
        "users"
      ]
    }
  }
}
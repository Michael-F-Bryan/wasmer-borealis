{
  "$schema": "https://github.com/Michael-F-Bryan/wasmer-borealis/tree/main/experiment.schema.json",
  "package": "wasmer/wapm2pirita",
  "args": [
    "convert",
    "/files/${TARBALL_FILENAME}",
    "/out/${PKG_NAME}.webc"
  ],
  "wasmer": {
    "args": [
      "--mapdir=/files:${FIXTURES_DIR}",
      "--mapdir=/out:${OUT_DIR}"
    ]
  }
}
